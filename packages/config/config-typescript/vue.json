{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "./base.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ]
  }
}
